<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet author="Gordon Child" id="create-users-table-with-data" dbms="mysql,postgresql,mssql,derby,h2,hsqldb">
        <createTable tableName="users">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(50)"/>
            <column name="password" type="varchar(60)"/> <!-- bcrypt uses 60 bytes -->
        </createTable>
        <insert tableName="users">
            <column name="username" value="gordolio"/>
            <!-- TODO: use some sort of hashing rather than storing the password in raw text-->
            <column name="password" value="P@$$w0rd"/>
        </insert>
        <insert tableName="users">
            <column name="username" value="testuser1"/>
            <!-- TODO: use some sort of hashing rather than storing the password in raw text-->
            <column name="password" value="P@$$w0rd"/>
        </insert>
        <insert tableName="users">
            <column name="username" value="testuser2"/>
            <!-- TODO: use some sort of hashing rather than storing the password in raw text-->
            <column name="password" value="P@$$w0rd"/>
        </insert>
    </changeSet>
    <changeSet author="Gordon Child" id="update-users-table-data" dbms="mysql,postgresql,mssql,derby,h2,hsqldb,oracle">
        <addColumn tableName="users">
            <column name="salt" type="varchar(20)"/>
        </addColumn>
        <update tableName="users">
